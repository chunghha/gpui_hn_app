// Configuration file for gpui-hn-app
// Place this file as config.ron in the same directory as the executable
// or in the current working directory

(
    // Font settings
    font_sans: "IBM Plex Sans",
    font_serif: "IBM Plex Serif",
    font_mono: "IBM Plex Mono",

    // Preferred theme to apply (must match a theme name in the JSON in ./themes)
    // Example: "Flexoki Light" or "Flexoki Dark"
    theme_name: "Flexoki Light",

    // Path to a theme file or themes directory.
    // If this points to a file, the app will watch the parent directory.
    // Default is the ./themes directory which contains theme JSON files.
    theme_file: "./themes",

    // WebView zoom level (percentage)
    // Default: 120 (120% zoom for better readability)
    // Adjust this value to make webview content larger or smaller
    // Examples: 100 (no zoom), 120 (20% larger), 150 (50% larger)
    webview_zoom: 120,

    // Window size (in pixels)
    // Default: 980x720
    window_width: 980.0,
    window_height: 720.0,
)
